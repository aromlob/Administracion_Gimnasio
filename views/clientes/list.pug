extends ../templates/layout

block content
    div.container 
        h3 Listado de clientes:
        table.table
            thead 
                tr 
                    th id_cliente 
                    th Nombre 
                    th Email 
                    th Fecha de Registro 
                    th Numero de telefono 
                    th Borrar 
                    th Editar
                    th Mostrar planes
            tbody 
                each cliente in clientes 
                    tr 
                        td=cliente.id_cliente 
                        td=cliente.nombre 
                        td=cliente.email 
                        td=cliente.fecha_registro 
                        td=cliente.numero_telefono 
                        td 
                            a(href=`/clientes/delete/${cliente.id_cliente}`) Borrar
                        td
                            a(href=`/clientes/edit/${cliente.id_cliente}`) Editar
                        td 
                            a(href=`/clientes/${cliente.id_cliente}/planes`) Mostrar planes 
