extends ../templates/layout
block content
  h1 Agregar Cliente
  form(action="/clientes/add" method="POST")
    div
      label(for="nombre") Nombre:
      input(type="text" name="nombre" id="nombre" required)
    div
      label(for="email") Email:
      input(type="email" name="email" id="email" required)
    div
      label(for="fecha_registro") Fecha de registro:
      input(type="date" name="fecha_registro" id="fecha_registro" required)
    div
      label(for="numero_telefono") Tel√©fono:
      input(type="text" name="numero_telefono" id="numero_telefono" required)
    div
      button(type="submit") Agregar Cliente
  a(href="/clientes") Volver a la lista de clientes
