extends ../templates/layout

block content

    div 
        h3 Asociar sesion al entrenador 
        if sesiones.length > 0
            form(action=`/entrenadores/${entrenadorId}/sesiones/add` method="post")
                label(for="sesionId") Selecciona un plan:
                select(name="sesionId" id="sesionId" required)
                    each sesion in sesiones 
                        option(value=sesion.id)= sesion.id
                br
                label(for="hora_inicio") Hora de inicio:
                input(type="time" name="hora_inicio" id="hora_inicio" required)
                br
                label(for="duracion_min") Duraci√≥n (minutos):
                input(type="number" name="duracion_min" id="duracion_min" min="1" required)
                br
                label(for="id_cliente") ID Cliente:
                input(type="number" name="id_cliente" id="id_cliente" required)
                br
                button(type="submit") Asociar
