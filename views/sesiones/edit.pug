extends ../templates/layout

block content
  h1 Eliminar sesión
  p ¿Estás seguro de que deseas eliminar esta sesión?
  form(action='/sesiones/delete' method='POST')
    input(type='hidden' name='id' value=sesion.id)
    div
      label Nombre del cliente
      p=sesion.id_cliente
    div
      label Nombre del entrenador
      p=sesion.id_entrenador
    div
      label Fecha de inicio
      p=sesion.fecha_inicio
    div
      label Hora de inicio
      p=sesion.hora_inicio
    div
      label Duración
      p=sesion.duracion_min
    button(type='submit') Eliminar
    a(href='/sesiones') Cancelar