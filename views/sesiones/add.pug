extends ../templates/layout

block content
  h1 Agregar nueva sesión
  form(action='/sesiones/add' method='POST')
    div
      label(for='fecha_inicio') Fecha de inicio
      input(type='date' name='fecha_inicio' required)
    div
      label(for='hora_inicio') Hora de inicio
      input(type='time' name='hora_inicio' required)
    div
      label(for='duracion_min') Duración (minutos)
      input(type='number' name='duracion_min' required)
    div
      label(for='id') Cliente
      select(name='id' required)
        option(value='') Selecciona un cliente
        each cliente in clientes
          option(value=cliente.id)= cliente.nombre
    div
      label(for='id') Entrenador
      select(name='id' required)
        option(value='') Selecciona un entrenador
        each entrenador in entrenadores
          option(value=entrenador.id)= entrenador.nombre
    div
      button(type="submit") Agregar Sesion
  a(href="/sesiones") Volver a la lista de sesion
