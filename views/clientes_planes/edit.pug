extends ../templates/layout

block content
  h1 Editar Cliente-Plan
  form(action=`/clientes_planes/edit/${cliente_plan.Id_cliente_plan}` method="POST")
    div
      label(for="Id_cliente") ID Cliente:
      input(type="number" name="Id_cliente" id="Id_cliente" value=cliente_plan.Id_cliente required)
    div
      label(for="Id_plan") ID Plan:
      input(type="number" name="Id_plan" id="Id_plan" value=cliente_plan.Id_plan required)
    div
      label(for="fecha_inicio") Fecha de Inicio:
      input(type="date" name="fecha_inicio" id="fecha_inicio" value=cliente_plan.fecha_inicio required)
    div
      label(for="fecha_fin") Fecha de Fin:
      input(type="date" name="fecha_fin" id="fecha_fin" value=cliente_plan.fecha_fin required)
    div
      button(type="submit") Guardar Cambios
  a(href="/clientes_planes") Volver a la lista de cliente-plan
